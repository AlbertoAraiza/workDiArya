<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:weightSum="10">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Viernes 13"
        android:textAlignment="textStart"
        android:fontFamily="@font/waltograph"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_weight="4.5"/>

    <TextView
        android:id="@+id/tvMorning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:background="@color/darkBeige"
        tools:text="BxB"
        android:textAlignment="center"
        android:fontFamily="@font/waltograph"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_weight="2.75"/>

    <TextView
        android:id="@+id/tvEvening"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:background="@color/ravenclawBrightRed"
        tools:text="BxB"
        android:textAlignment="center"
        android:fontFamily="@font/waltograph"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_weight="2.75"/>

    <TextView
        android:id="@+id/tvExtra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:background="@color/cadburyPurple"
        android:text="@string/acumulated_working"
        android:textAlignment="center"
        android:fontFamily="@font/waltograph"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_weight="5.5"/>

</LinearLayout>